#include <iostream>
using namespace std;

int main() {
    int num;
    cout<<"Enter number"<<endl;
    cin>>num;
    int number=0;
    int ce=0;
    int co=0;
    while (num!=0){
        number=num%10;
        num=num/10;
        if(number%2==0){
            ce+=1; 
        }
        
        else{
            co+=1;
        }
    }
    cout<<"Total number of odd numbers : "<<co<<endl;
    cout<<"Total number of even numbers : "<<ce;
    return 0;
}
